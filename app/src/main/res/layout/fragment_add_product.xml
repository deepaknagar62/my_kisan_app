<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragements.AddProduct">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="260dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            app:cardElevation="20dp">

            <ImageView
                android:id="@+id/imageView23"
                android:layout_width="250dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"></ImageView>


            <ImageView
                android:id="@+id/buttonChooseImage2"
                android:layout_width="67dp"
                android:layout_height="62dp"
                android:layout_gravity="center"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="70dp"
                android:src="@drawable/ic_add_a_photo">

            </ImageView>

        </androidx.cardview.widget.CardView>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:text="About Sell"
            android:textColor="@color/black"
            android:textStyle="bold">

        </TextView>

        <androidx.cardview.widget.CardView
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="5dp">

            <EditText
                android:id="@+id/editTextAbout2"
                android:layout_width="274dp"
                android:layout_height="match_parent"
                android:layout_gravity="center">

            </EditText>

        </androidx.cardview.widget.CardView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:text="Price"
            android:textColor="@color/black"
            android:textStyle="bold">

        </TextView>

        <androidx.cardview.widget.CardView
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="5dp">

            <EditText
                android:id="@+id/editTextPrice2"
                android:layout_width="280dp"
                android:layout_height="match_parent"
                android:layout_gravity="center">

            </EditText>

        </androidx.cardview.widget.CardView>








        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:text="Type of Sell"
            android:textColor="@color/black"
            android:textStyle="bold">

        </TextView>

        <androidx.cardview.widget.CardView
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="5dp">

            <Spinner
                android:id="@+id/spinerid"
                android:layout_width="280dp"
                android:layout_height="match_parent"
                android:layout_gravity="center">

            </Spinner>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/buttonCreatePerson2"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:text="Submit"
            android:layout_gravity="center">

        </Button>



    </LinearLayout>



</LinearLayout>